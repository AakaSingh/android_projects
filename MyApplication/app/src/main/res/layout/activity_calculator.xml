<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="4"
    android:rowCount="6"
    >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/calculator_display"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="4"
        android:autoSizeTextType="uniform"
        android:text=""
        android:hint="0"
        android:ellipsize="start"
        android:gravity="end"
        />

    <Button
        android:id="@+id/calculator_value_7"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="7"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_8"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="8"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_9"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="9"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_clear"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="c"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_5"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="5"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_6"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_add"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="2"
        android:text="+"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="1"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="2"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="0"
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_dot"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="."
        android:autoSizeTextType="uniform"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_sub"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="-"
        android:autoSizeTextType="uniform"
        android:layout_columnSpan="2"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/calculator_value_equal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="="
        android:autoSizeTextType="uniform"
        android:layout_columnSpan="4"
        android:layout_margin="5dp"
        />




</GridLayout>