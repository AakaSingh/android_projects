<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:text="Explore"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Recently Played"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Havana"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/havana"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lights"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:drawableTop="@drawable/nucleya"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:autoSizeTextType="uniform"
            android:text="Sounds Like G.."
            android:textSize="12dp"
            android:drawableTop="@drawable/third"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Recommended For You"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:orientation="vertical"
        >
        <Button
            android:layout_gravity="center_horizontal"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:autoSizeTextType="uniform"
            android:text="Bass Rani"
            android:textSize="15dp"
            android:drawableTop="@drawable/bassrani"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <TextView
            android:text="Nucleya"
            android:layout_gravity="center_horizontal"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:autoSizeTextType="uniform"
            android:text="Gully Boy"
            android:textSize="15dp"
            android:drawableTop="@drawable/gullyboy"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <TextView
            android:text="Nucleya"
            android:layout_gravity="center_horizontal"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Popular Artists"
        android:paddingBottom="10dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:rowCount="2"
        android:columnCount="3"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:background="#e9e6dc"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nucleya"
            android:layout_rowSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bhayanak Aatma"
            android:layout_columnWeight="1"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nucleya"
            android:textColor="#8d8c8c"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pause"
            android:layout_rowSpan="2"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/explore"
            android:background="#100000000"
            android:textColor="#FFC0CB"
            android:textStyle="bold"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/trending"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/search"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/library"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/settings"
            android:background="#100000000"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>